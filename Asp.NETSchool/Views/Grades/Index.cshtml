@model IEnumerable<Grade>
<h4>List of all grades</h4>
<a class="btn btn-success mb-2" asp-action="Create">Create</a>
@foreach (Grade item in Model) {
    <div class="border border-1 border-dark rounded p-2">
        <p>@item.Student.FirstName @item.Student.LastName</p>
        <p>@item.Subject.Name - @item.Topic, grade: @item.Mark</p>
        <p>@item.Date.ToShortDateString()</p>
        <a class="btn btn-info" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </div>
}
